@page
@model BioBank.Pages.Samples.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sample</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Sample.SampleID" />
            <div class="form-group">
                <label asp-for="Sample.CollectionID" class="control-label"></label>
                <select asp-for="Sample.CollectionID" class="form-control" asp-items="ViewBag.CollectionID"></select>
                <span asp-validation-for="Sample.CollectionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sample.DonorCount" class="control-label"></label>
                <input asp-for="Sample.DonorCount" class="form-control" />
                <span asp-validation-for="Sample.DonorCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sample.MaterialType" class="control-label"></label>
                <input asp-for="Sample.MaterialType" class="form-control" />
                <span asp-validation-for="Sample.MaterialType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sample.LastUpdated" class="control-label"></label>
                <input asp-for="Sample.LastUpdated" class="form-control" />
                <span asp-validation-for="Sample.LastUpdated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Collections/Details" asp-route-id="@Model.CollectionID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
