@page
@model BioBank.Pages.Samples.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sample[0].DonorCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sample[0].MaterialType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sample[0].LastUpdated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sample) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonorCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SampleID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SampleID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SampleID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
