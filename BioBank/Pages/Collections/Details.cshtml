@page
@model BioBank.Pages.Collections.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Collection</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Collection.DiseaseTerm).ToString().Replace("DiseaseTerm", "Disease Term")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Collection.DiseaseTerm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Collection.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Collection.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Collection.Samples)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Donor Count</th>
                    <th>Material Type</th>
                </tr>
                @foreach (var item in Model.Collection.Samples)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DonorCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaterialType)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Collection.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
